{% extends 'base.html.twig' %}

{% block title %}
	{{product.name}}
	| Shop by Zed
{% endblock %}

{% block content %}
	<a href="{{ path ('products') }}" class="btn btn-secondary">Retour aux produits</a>
	<hr>

	<div class="row">
		<div class="col-md-5 my-auto">
			<img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid">
		</div>

		<div class="col-md-7">
			<h3>{{product.name}}</h3>
			<p>{{product.subtitle}}</p>
			<span class="product-page-price">{{ (product.price /100)| number_format(2,'.',',') }}â‚¬</span>
			<hr>
			<p>{{product.description}}
			</p>
			<a href="{{ path ('add_to_cart', {'id': product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
		</div>
	</div>


{% endblock %}
